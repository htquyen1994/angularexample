{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "outDir": "./out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ],
      "@periscope-lib/*": [
        "./src/periscope-lib/src/lib/*"
      ],
      "@admin-modules/*": ["./src/admin/app/modules/*"],
      "@admin-core/*": ["./src/admin/app/core/*"],
      "@admin-shared/*": ["./src/admin/app/shared/*"],
      "@client/*": ["./src/client/*"],
      "@client-core/*": ["./src/client/app/core/*"],
      "@client-shared/*": ["./src/client/app/shared/*"],
    }
  },
  // "angularCompilerOptions": {
  //   "fullTemplateTypeCheck": true,
  //   "strictInjectionParameters": true
  // }
}
